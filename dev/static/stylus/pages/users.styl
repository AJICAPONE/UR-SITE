  margin 0 -15px
  padding 12px 15px
  background-color #424B5B
.section-users-balance--title
  font-family 'Open Sans 400',sans-serif
  font-size 13px
  color #fff
  margin-bottom 5px
.section-users-balance--count
  font-family 'Open Sans 400',sans-serif
  font-size 16px
