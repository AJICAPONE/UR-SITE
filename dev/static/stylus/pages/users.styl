.section-balance-filter--date
  display flex
  flex-direction column
  label
    color #272727
    font-family 'Oswald 500',sans-serif
    font-size 12px
.section-balance-filter--date__wrap
  display flex
.section-balance-filter-date__wrap
  display flex
  align-items center
  position relative
.section-balance-date--icon
  display flex
  justify-content center
  align-items center
  position absolute
  right 10px
  .icon
    size(20px)
.calendar-filter-today,.calendar-filter
  padding-right 40px
  text-align center
.section-balance--filter
  display none
.section-body-checkbox__off
  display none
.section-body-checkbox__input__off
  position relative
  width 40px
  height 24px
  background: rgba(120, 120, 128, 0.4);
  border-radius: 12px;
  cursor pointer
  transition all linear .2s
  &:before
    content ''
    size(20px)
    background-color #fff
    border-radius 50%
    min-width 20px
    absolute-center()
    left 13px
    box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15), 0px 3px 1px rgba(0, 0, 0, 0.06);
    transition all linear .2s
    will-change transform

.section-body-checkbox__input__off.checked:before
  left 27.5px
.section-body-checkbox__input__off.checked
  background-color #FDAB3E
.section-tbody--icon
  position relative
.section-tbody--modal--table,.section-sup--modal--table
  position: absolute;
  display: none;
  left: -20px;
  //top: 62px;
  transform: translateY(17px);
  background: #fff
  box-shadow: 0px 0px 20px rgba(0,0,0,0.3);
  border-radius: 5px;
  width: 247px;
  z-index: 5;
  &:after
