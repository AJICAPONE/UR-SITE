.section-user--dropdown__img
  margin-bottom 20px
  label
    font-family 'Oswald 500',sans-serif
    font-size 18px
    color #272727
.section-user--dropdown-and-more
  display flex
.section-user--more
  position relative
  background-color #424B5B
.section-user--dropdown__img--wrap
  position relative
  display flex
  justify-content center
  align-items center
  background: #F9F9F9;
  border: 2px dashed rgba(255, 255, 255, 0.1);
  border-radius: 5px;
  width 255px
  height 300px
  margin-right 15px
.dropdown-img
  position absolute
  right 0
  left 0
  top 0
  bottom 0
  line-height 0
  opacity 0
  z-index 2
  cursor pointer
.section-user--dropdown__img--info
  display flex
  flex-direction column
  justify-content center
  align-items center
  color rgba(39, 39, 39, 0.6)
  font-family 'Open Sans 400',sans-serif
  font-size 15px
.section-user--dropdown__img--zone
  position absolute
  right 0
  left 0
  top 0
  bottom 0
  width 100%
  height 100%
  background-size cover
  background-position center
  background-repeat no-repeat
  border-radius 5px

.section-user--more--popup
  position absolute
  display none
  left -10px
  top 62px
  background: #424b5b
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  width 247px
  z-index 5
  &:after
    content ''
    position absolute
    left 20px
    top -19.5px
    clip-path: polygon(50% 15%, 0% 100%, 100% 100%);
    background-color #424b5b
    size(20px)
    z-index 4
.section-user--more--popup__item
  display flex
  align-items center
  padding 12.5px 15px
  height 55px
  cursor pointer
  transition all linear .1s
  .icon
    size(19px)
    margin-right 15px
  .icon-delete
    fill #EF4037
  &:first-child
    padding-bottom 12.5px
    margin-bottom 0
    border-radius: 5px 5px 0px 0px;
  &:last-child
    padding-top 12.5px
    border-radius: 0px 0px 5px 5px;
  &:hover
    background-color #3c4452

  span
    color #fff
    font-family 'Open Sans 600',sans-serif
    font-size 14px
  &:last-child
    margin-bottom 0

.section-user--dropdown__wrap
  display none
.section-user--dropdown__wrap.active
  display block
.section-footer-side
  padding 12px 15px
  border-top: 1px solid rgba(153, 163, 181, 0.3);

.section-user-files
  display flex
  align-items center
  background-color rgba(66, 75, 91, 0.7)
  border-radius 5px
  margin-right 10px
  height 42px
  padding 8px 10px

  &:hover
    text-decoration none

  .icon
    margin-right 10px
    size(26px)


  span
    font-family 'Open Sans 400',sans-serif
    font-size 12px
    color rgba(255, 255, 255, 0.6)
.section-user-flex
  flex-direction initial
  margin 0
.section-user-files--more
  background-color #3E4756
  size(42px)

.section-checkbox-files
  display flex
  align-items center
  justify-content space-between
  width 100%

.section-user-flex--item,.section-car-tabs--list2
  display flex
