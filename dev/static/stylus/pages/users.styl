    position: absolute;
    left: 20px;
    top: -19.5px;
    clip-path: polygon(50% 15%, 0% 100%, 100% 100%);
    background-color: #fff;
    width: 20px;
    height: 20px;
    z-index: 4;
.section-tbody--modal--item
  display: flex;
  align-items: center;
  padding: 12.5px 15px;
  height: 55px;
  cursor: pointer;
  transition: all linear 0.1s;
  &:hover
    background-color: #f9f9f9;
  .icon
    size(19px)
    margin-right 15px
    opacity 1
    stroke: none
    fill: #2F80ED
  span
    color: #272727;
    font-family: 'Open Sans 600', sans-serif;
    font-size: 14px;

