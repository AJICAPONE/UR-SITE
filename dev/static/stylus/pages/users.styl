.section-driver-rules--category p
  display: flex;
  align-items: center;
  position: relative;
  justify-content: space-between;
  background-color: #fdbf5a;
  border-radius: 3px;
  padding: 5px 10px;
  margin: 2.5px 5px 2.5px 0px;
