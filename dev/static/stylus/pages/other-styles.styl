.section-file-info-add
  display flex
  align-items center
  justify-content space-between
  background-color #F9F9F9
  border-radius 21px
  height 42px
  width max-content
  padding 15px
  cursor pointer
  span
    font-family 'Montserrat 500',sans-serif
    font-size 12px
    color #272727
  .icon
    size(20px)
    margin-right 25px
.section-file-info-add__input
  opacity 0
  line-height 0
  position absolute
  right 0
  left 0
  bottom 0
  top 0
  cursor pointer
  width 100%
.section-tiny-wrap
  label
    font-family 'Oswald 500',sans-serif
    font-size 16px
    color #272727
.section-tiny-side

  .section-text-options
    background-color #EEF2F8
    padding 16px
    height 46px
    border-radius 5px 5px 0px 0px
    margin-bottom 0
  .textarea-text-option
    margin 0
    height 300px
    border-radius 0px 0px 5px 5px
  .textarea-text-option--wrap
    margin-bottom 20px
.textarea-text-option ol
  counter-reset: item;
  padding 0
.textarea-text-option ol > li
  list-style: none;
.textarea-text-option ol > li:before
  content: counter(item) ") ";
  counter-increment: item;
  color: #2F80ED
.border-none
  border none
