.section-select--input
  position relative
  display flex
  align-items center
  justify-content space-between
  background-color#F9F9F9
  border-radius: 5px;
  padding: 6px 13px 6px 8px;
  cursor pointer
  min-height 44.6px
  span
    font-family 'Open Sans 400',sans-serif
    font-size 12px
    color rgba(39, 39, 39, 0.6)
  .icon
    size(15px)
.section-yellow-bg--content,.section-role--table__item,.section-yellow-bg--content2
  display flex
  align-items center
  position relative
  justify-content space-between
  background-color #2F80ED
  border-radius 3px
  padding 5px 10px
  margin: 2.5px 5px 2.5px 0px;
  color #fff
  z-index 5
  span
    color #fff !important
    margin-right 15px
    white-space nowrap
.section-select--popup__icon
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 8px;
  cursor pointer
  .icon
    size(19px)
    stroke: #272727

.section-yellow-bg--content__icon,.section-role--table__item--close,.section-yellow-bg--content__icon2
  absolute-center()
  left auto
  right -12px
  size(24px)
  display: flex;
  justify-content: center;
  align-items: center;
  z-index 10
  .icon
    size(10px)
    fill #fff
.section-label-select--wrap
  label
    font-family 'Oswald 500',sans-serif
    font-size 12px
    color #272727
.section-select--popup__list,.section-select--popup__list2
  position: absolute;
  display none
  top 52px
  right 0
  left 0
  width 100%
  background: #fff;
  box-shadow: 0px 0px 40px rgba(27,33,43,0.3);
  border-radius: 5px;
  padding: 8px 11px;
  z-index: 5;
.section-select--popup__item,.section-select--popup__item2,.section-select--popup__item3
  margin-bottom 8px
  font-family 'Open Sans 400',sans-serif
  font-size 13px
  color #272727
  cursor pointer
  &:last-child
    margin-bottom 0

.section-yellow-bg--wrap,.section-role--table__list
  display flex
  align-items center
  flex-wrap wrap


// Главный инпут
.section-input-wrap
  display flex
  flex-direction column
  width 100%
  margin-bottom 20px
  label
    font-family 'Oswald 500',sans-serif
    font-size 12px
    color #272727
.input-main,.section-select--input2
  position relative
  background-color #f9f9f9
  border-radius 5px
  border none
  color rgba(39, 39, 39, 0.6)
  height 42px
  padding 13px 9px
  font-family 'Open Sans 400',sans-serif
  font-size 12px
  width 100%

.section-select--input2
  display flex
  justify-content space-between
  align-items center

// Checkbox-tab
.checkbox-input--tab
  display none
.checkbox-input
  display flex
  align-items center
  position relative
  margin-right: 10px;
  margin-bottom 0
  size(20px)
  min-width 20px
  background: #F2F2F2
  border-radius: 3px;
  cursor pointer
.checkbox-input--tab__item
  display flex
  align-items center
  span
    font-family 'Oswald 500',sans-serif
    font-size 14px
    color #272727

.checkbox-input.checked:before
  content: '';
  position: absolute;
  left: 4.5px;
  top: 11px;
  background:#2F80ED;
  width: 2px;
  height: 2px;
  box-shadow:  2px 0px 0 #2F80ED, -2px 0px 0 #2F80ED, 4px 0 0 #2F80ED, 4px -2px 0 #2F80ED, 4px -4px 0 #2F80ED, 4px -6px 0 #2F80ED, 4px -8px 0 #2F80ED, 4px -10px 0 #2F80ED,4px -12px 0 #2F80ED;
  transform: rotate(45deg);

