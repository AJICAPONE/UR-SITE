.popup-header
  display flex
  flex-direction column
  margin-bottom 40px

.popup-close--icon
  display flex
  justify-content flex-end
  align-items flex-end
  width max-content
  margin auto 0 0 auto
  cursor pointer
  .icon
    size(20px)
    fill #272727
.modal-content
  background-color #fff
  border-radius: 5px;
  padding 30px
  border none

.modal-dialog
  max-width 630px
.popup-title
  text-align center
  font-family 'Oswald 400',sans-serif
  font-size 24px
  color #272727
.popup-balance--buttons
  display flex
  align-items center
  margin-bottom 20px
  margin-right 0
  margin-left 0
.popup-balance--button
  display flex
  justify-content center
  align-items center
  color #fff
  font-size 11px
  font-family 'Oswald 400',sans-serif
  background: #424B5B;
  border: 0.5px solid rgba(255, 255, 255, 0.1);
  border-radius: 18px;
  padding 7px 15px
  height 30px
  margin-right 10px
  cursor pointer
  transition all linear .2s
  &:hover
    background-color #3c4452
.popup-balance--button.active
  background-color #FDAB3E
.textarea-input
  background-color #f9f9f9
  border-radius 5px
  padding 13px
  font-family 'Open Sans 400',sans-serif
  font-size 12px
  color rgba(39, 39, 39, 0.6)
  border none
  outline none
.popup-balance-checkboxes
  margin-bottom 50px
.popup-balance-checkbox--wrap
  display flex
  align-items center
  margin-bottom 10px

  &:last-child
    margin-bottom 0
  span
    font-family 'Oswald 400',sans-serif
    font-size 13px
    color #fff
.popup-balance-checkbox__input
  display none
.popup-balance-checkbox
  size(20px)
  background-color #424B5B
  border-radius 5px
  position relative
  cursor pointer
  margin-right 10px
.popup-balance-checkbox.checked:before
  content ''
  absolute-center()
  size(20px)
  background-color #FDAB3E
  border-radius 3px
.popup-balance-checkbox.checked:after
  content ''
  absolute-center()
  size(16px)
  background-color transparent
  border 2px solid #363D4A
  border-radius 3px

.popup-section-button
  display flex
  align-items center
  justify-content center

  .section-button--gray,.section-button--yellow
    height 46px
    width 170px
  .section-button--gray
    margin-right 30px

.section-button--gray.close
  opacity 1
  color #fff !important
  font-weight normal

.pb-red.active
  background-color #FF4B55
.section-button--red
  background-color #FF4B55
  box-shadow: 0px 0px 20px rgba(255, 75, 85, 0.2)

.pbc-red.checked:before
  background-color #FF4B55




