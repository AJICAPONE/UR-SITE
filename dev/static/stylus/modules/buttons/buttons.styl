.gogocar-arrow-button
  display flex
  justify-content center
  align-items center
  background-color rgba(39,39,39,0.05)
  border-radius 5px
  size(40px)
  cursor pointer

  .icon
    size(17px)
    fill #272727
    stroke #272727
    opacity 0.3

.hover-text-color
  transition all linear .2s

  &:hover
    color #2F80ED

.gogocar-arrow-button-pagination
  display flex
  justify-content center
  align-items center
  background-color rgba(39, 39, 39, 0.05)
  border-radius 5px
  size(35px)
  cursor pointer

  .icon
    size(14px)
    stroke #272727 
    opacity 1

.section-users--tabs
  display flex
  align-items center

.section-users--tabs::-webkit-scrollbar
  height 0

.section-users--tab,.section-car-tabs--item,.section-car-tabs--item2,.section-car-tabs-added,.section-car-tabs-added2
  display flex
  justify-content center
  align-items center
  background-color #E9E9E9
  border-radius: 5px;
  padding 9px 25px
  height 36px
  width max-content
  margin 7.5px 15px 7.5px 0
  font-family 'Oswald 500',sans-serif
  font-size 12px
  color #272727
  cursor pointer
  transition all linear .1s
  &:hover
    background-color #0d4ea5

.section-users--tab.active,.section-car-tabs--item.active,.section-car-tabs--item2.active
  background: #2F80ED;
  box-shadow: 0px 0px 20px rgba(47, 128, 237, 0.2);
  color #fff
.section-car-tab--list,.section-car-tab--list2
  display none
.section-car-tab--list.active,.section-car-tab--list2.active
  display flex
.section-car-tabs--list,.section-car-tabs--list2
  margin 0
  margin-bottom 10px
.section-buttons--wrap
  display flex
  align-items center
.section-button--yellow,.section-button--gray
  display flex
  justify-content center
  align-items center
  border none
  border-radius 30px
  height 40px
  padding 15px
  width 100%
  font-family 'Montserrat 500',sans-serif
  font-size 12px
  color #fff
  cursor pointer
  outline none !important
  transition all linear .2s

.w-100px
  width 100px

.section-button--yellow
  background-color #2F80ED
  box-shadow: 0px 0px 10px #2F80ED

  &:hover
    box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.2);

.section-button--gray
  background-color #E9E9E9
  color #272727

  &:hover
    background-color #3c4452
    color #fff


