                        .d-flex.justify-content-between.align-items-center
                            label Тело
                            ul.section-users--tabs.section-users-mobile.section-upper-modal
                                +tabsLink('trip-archive','Текст')(class="editor-text" class="ed-mr-0")
                                +tabsLink('trip-all','HTML')(class="editor-html2" class="active" class="mr-0")
                            .section-dotted-mobile.gogocar-arrow-button.sdm-gray
                                +icon('dots')
                        .section-tiny-side
                            .section-text-options.active.justify-content-between
                                .d-flex
                                    .section-text-option__item(data-edit-type="bold")
                                        +icon('bold-text')
                                    .section-text-option__item(data-edit-type="italic")
                                        +icon('cursive')
                                    .section-text-option__item(data-edit-type="underline")
                                        +icon('underline-text')
                                    .section-text-option__item(data-edit-type="formatblock" data-edit-value="blockquote")
                                        +icon('quote')
                                    .section-text-option__item(data-edit-type="insertunorderedlist")
                                        +icon('list')
                                    .section-text-option__item(data-edit-type="insertorderedlist")
                                        +icon('numbers')
                                    .section-text-option__item(data-edit-type="fontsize-smaller")
                                        +icon('font')
                                    .section-text-option__item(data-edit-type="fontsize-bigger")
                                        +icon('line')
                                    .section-text-option__item(data-edit-type="createLink")
                                        +icon('link')
                                .d-flex
                                    .section-text-option__item(data-edit-type="undo")
                                        +icon('undo')
                                    .section-text-option__item(data-edit-type="redo").mr-0
                                        +icon('undo','undo-rotate')
                            .textarea-text-option--wrap
                                .textarea-text-option(contenteditable="true") Ответ...
                                textarea.textarea-text-plaintext Ответ...
                .col-xl-12.col-lg-12.col-md-12.col-sm-12.section-input-wrap
                    label SMS Text:
                    textarea.textarea-input(cols="5" rows="10" placeholder="Здравствуйте, #user_name# Вы начали обучение по курсу «#course_title#». Если у вас возникли сложности в обучении вы можете отправить сообщение в чат преподавателю")
                .col-xl-12.col-lg-12.col-md-12.col-sm-12.section-input-wrap
                    label Viber Text:
                    textarea.textarea-input(cols="5" rows="10" placeholder="Здравствуйте, #user_name# Вы начали обучение по курсу «#course_title#». Если у вас возникли сложности в обучении вы можете отправить сообщение в чат преподавателю")
                .col-xl-12.col-lg-12.col-md-12.col-sm-12.section-input-wrap
                    label Telegram Text:
                    textarea.textarea-input(cols="5" rows="10" placeholder="Здравствуйте, #user_name# Вы начали обучение по курсу «#course_title#». Если у вас возникли сложности в обучении вы можете отправить сообщение в чат преподавателю")
