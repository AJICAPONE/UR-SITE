header.box-bg.pr-50
    .header-nav-left
        .header-nav-left--back.gogocar-arrow-button.editor-close-button
            +icon('arrow-left','arrow-rotate editor-open')
            +icon('close','editor-close')
        .header-nav-left-menu.gogocar-arrow-button
            +icon('menu')
        .header-logo
            +icon('logo')
    .header-nav-right

        .header-right--message.header-right--message__notification
            +icon('message')
        .header-right-choise--lang__wrap
            .header-right-choise--lang(data-lang="RU")
                .choise-lang__img(style="background-image:url('./static/img/general/lang/lang-ru.png')")
                .choise-lang__arrow
                    +icon('arrow-down')
            ul.choise-lang--list
                li.choise-lang--item
                    .choise-lang--item__img(style="background-image:url('./static/img/general/lang/lang-ru.png')")
                    .choise-lang--item__text RU
                li.choise-lang--item
                    .choise-lang--item__img(style="background-image:url('./static/img/general/lang/lang-uz.png')")
                    .choise-lang--item__text UZ
        .header-logout
            +icon('logout')
