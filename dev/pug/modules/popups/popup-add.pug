#popup-add.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content
            .popup-header
                .popup-close--icon.close(data-dismiss="modal" aria-label="Close")
                    +icon('close')
                h3.popup-title Пополнение баланса
            .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-input-wrap.popup-input--wrap.p-0
                label Сумма:
                input.input-main(type="text" placeholder="Введите сумму")
            .popup-balance--buttons.row
                .popup-balance--button 1 000
                .popup-balance--button 5 000
                .popup-balance--button 10 000
                .popup-balance--button 20 000
                .popup-balance--button 50 000
                .popup-balance--button 100 000
            .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-input-wrap.popup-input--wrap.p-0
                label Комментарий:
                textarea.textarea-input(placeholder="Комментарий..." cols="4" rows="3")
            .popup-balance-checkboxes
                .popup-balance-checkbox--wrap
                    .popup-balance-checkbox
                    input.popup-balance-checkbox__input(type="checkbox")
                    span Пополнение баланса
                .popup-balance-checkbox--wrap
                    .popup-balance-checkbox
                    input.popup-balance-checkbox__input(type="checkbox")
                    span Бонус к балансу
                .popup-balance-checkbox--wrap
                    .popup-balance-checkbox
                    input.popup-balance-checkbox__input(type="checkbox")
                    span Бонус по промокоду
            .popup-section-button
                .section-button--gray.close(data-dismiss="modal" aria-label="Close") Отменить
                button.section-button--yellow(type="submit") Применить
